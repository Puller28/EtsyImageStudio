  async getProjectsByUserId(userId: string): Promise<Project[]> {
    // First, check memory cache for immediate response
    const memoryProjects = Array.from(this.projects.values()).filter(project => project.userId === userId);
    
    if (memoryProjects.length > 0) {
      console.log(`üì¶ Found ${memoryProjects.length} projects in memory for user ${userId}`);
      return memoryProjects;
    }
    
    // Production-grade database access with multiple strategies and optimizations
    console.log(`üîç Fetching projects for user ${userId} from production database...`);
    
    // Strategy 1: Direct PostgreSQL query with production-optimized connection
    try {
      const postgres = (await import('postgres')).default;
      const startTime = Date.now();
      
      const sql = postgres(process.env.DATABASE_URL!, {
        ssl: 'require',
        max: 2, // Allow multiple connections for better throughput
        idle_timeout: 10,
        connect_timeout: 15, // More generous timeout for production
        max_lifetime: 120, // Longer lifetime for stability
        prepare: false, // Disable prepared statements for simplicity
        transform: { undefined: null },
        debug: false,
        onnotice: () => {},
        statement_timeout: 20000, // 20 second statement timeout
        types: {
          // Ensure proper JSON parsing
          json: postgres.BigInt
        }
      });

      console.log(`üìä Executing production query for user ${userId}...`);
      
      // Optimized query with specific column selection and proper ordering
      const projects = await sql`
        SELECT 
          id, user_id, title, original_image_url, upscaled_image_url,
          mockup_image_url, mockup_images, resized_images, etsy_listing,
          mockup_template, upscale_option, status, zip_url, thumbnail_url,
          ai_prompt, metadata, created_at
        FROM projects 
        WHERE user_id = ${userId}
        ORDER BY created_at DESC 
        LIMIT 50
      `;
      
      const queryTime = Date.now() - startTime;
      console.log(`‚úÖ Production query completed in ${queryTime}ms, found ${projects.length} projects`);
      
      // Properly close the connection
      await sql.end();
      
      // Convert database format to application format
      const convertedProjects = projects.map((project: any) => ({
        id: project.id,
        userId: project.user_id,
        title: project.title,
        originalImageUrl: project.original_image_url,
        upscaledImageUrl: project.upscaled_image_url,
        mockupImageUrl: project.mockup_image_url,
        mockupImages: typeof project.mockup_images === 'string' ? 
          JSON.parse(project.mockup_images) : (project.mockup_images || {}),
        resizedImages: typeof project.resized_images === 'string' ? 
          JSON.parse(project.resized_images) : (project.resized_images || []),
        etsyListing: typeof project.etsy_listing === 'string' ? 
          JSON.parse(project.etsy_listing) : project.etsy_listing,
        mockupTemplate: project.mockup_template,
        upscaleOption: project.upscale_option || '2x',
        status: project.status || 'completed',
        zipUrl: project.zip_url,
        thumbnailUrl: project.thumbnail_url,
        aiPrompt: project.ai_prompt,
        metadata: typeof project.metadata === 'string' ? 
          JSON.parse(project.metadata) : (project.metadata || {}),
        createdAt: new Date(project.created_at)
      }));
      
      // Cache results in memory for subsequent requests
      convertedProjects.forEach(project => {
        this.projects.set(project.id, project);
      });
      
      console.log(`üíæ Cached ${convertedProjects.length} projects in memory for user ${userId}`);
      return convertedProjects;
      
    } catch (directDbError) {
      console.warn(`‚ö†Ô∏è Direct database query failed for user ${userId}:`, directDbError.message);
    }
    
    // Strategy 2: Fallback to REST API with retry logic
    try {
      console.log(`üîÑ Trying Supabase REST API as fallback for user ${userId}...`);
      const { getProjectsByUserIdRest } = await import('./supabase-rest');
      const projects = await getProjectsByUserIdRest(userId);
      
      if (projects && projects.length > 0) {
        console.log(`‚úÖ REST API fallback successful: ${projects.length} projects`);
        
        // Cache in memory for future requests
        projects.forEach(project => {
          this.projects.set(project.id, project);
        });
        
        return projects;
      }
      
    } catch (restError) {
      console.warn(`‚ö†Ô∏è REST API fallback failed for user ${userId}:`, restError.message);
    }
    
    // If all strategies fail, return empty array but log the issue
    console.error(`‚ùå All database access strategies failed for user ${userId}. This needs immediate attention for production deployment.`);
    return [];
  }
